<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Pengaturan garis tepi -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF"
        />

    <!-- Pengaturan radius sudut (opsional) -->
    <corners android:radius="10dp" />

    <!-- Pengaturan padding dalam (opsional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>