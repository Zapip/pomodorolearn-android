<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="25dp"
    app:cardBackgroundColor="@android:color/transparent"> <!-- Set background color to transparent -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_developers"> <!-- Pastikan drawable ini tidak memiliki background putih -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"> <!-- Set background to transparent -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/developers_photo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/lopek"/>

            <TextView
                android:id="@+id/developers_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="31dp"
                android:layout_toEndOf="@+id/developers_photo"
                android:text="Nama_Dev"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#fff"
                android:textSize="18sp" /> <!-- Ganti dp dengan sp untuk ukuran teks -->

            <ImageView
                android:id="@+id/verified_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="138dp"
                android:layout_toEndOf="@+id/developers_name"
                android:src="@drawable/group_11" />

            <TextView
                android:id="@+id/role_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developers_name"
                android:layout_marginStart="26dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/developers_photo"
                android:fontFamily="@font/poppins_regular"
                android:text="Role_Dev"
                android:textColor="#80FFFFFF"
                android:textSize="18sp" /> <!-- Ganti dp dengan sp untuk ukuran teks -->

            <TextView
                android:id="@+id/qoutes_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/role_dev"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="-1dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Quotes Developer"
                android:textColor="#80FFFFFF"
                android:textSize="10dp">
            </TextView>
        </RelativeLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>